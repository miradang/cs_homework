user_list = ['admin', 'bob', 'dave', 'john', 'frank']
passwords = ['admin', 'bob1', 'dave1', 'john1', 'frank1']
quit, add_user_b, add_user_n, add_user_p, add_user_a = 'n','','','', ''

while True:
    user_login = input("Enter your username:").lower()
    
    if user_login in user_list:
        user_login_index = user_list.index(user_login)
        user_pass_index = ()
        print(f"Hello {user_login}. Please enter your password: ")
        user_pass = input().lower()

        if user_pass in passwords:
            user_pass_index = passwords.index(user_pass)

            if user_pass in passwords and user_login_index == user_pass_index:
                print(f"Login Successful. Welcome {user_login}\n")
                current_user = user_login
                break        
        else:
            print("That Password is incorrect")          
    else:
        user_login = input("Please enter a valid username: ").lower()

if current_user == 'admin':
    while add_user_a != quit:
        add_user_a = input(f"{current_user} would you like to add a new user? y or n: ").lower()
        add_user_n = input("Please enter a username: ").lower()

        while add_user_n in user_list: 
            add_user_n = input(f"{add_user_n} has already been taken please enter a different username: ").lower()

        else:
            user_list.append(add_user_n)
            add_user_p = input(f"Please enter the password for the new user {add_user_n}: ").lower()
            passwords.append(add_user_p)
    

