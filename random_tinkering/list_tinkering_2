requested_toppings = []
quit = 'done'


while True:
    topping = input("Enter a topping. Enter done when finished: ")
    if topping == quit:
        break
    elif topping == 'dave':
        print("We are currently out of dave.")

    else:
        requested_toppings.append(topping)
        print(f"Adding {topping} to your pizza.\n")
    
#for requested_toppings in requested_toppings:
#   if requested_toppings == 'cheese':
#       requested_toppings.remove('cheese')
#       print("We are currently out of cheese.")

for requested_toppings in requested_toppings:
    print(f"Adding {requested_toppings}")

print(f"\nPizza is complete.")




